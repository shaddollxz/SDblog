{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": "./",
        "types": ["vite-plugin-svg-icons/client", "vite-plugin-pwa/client"],
        "paths": {
            "@/*": ["src/*"],
            "#/*": ["src/typings/*"],
            "@img/*": ["src/assets/img/*"],
            "@apis": ["src/apis"],
            "@views/*": ["src/views/*"],
            "#interface": ["../server/src/typings/interface/index.d.ts"]
        },
        "lib": ["esnext", "dom"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "config/**/*.ts",
        "vite.config.ts"
    ],
    "exclude": ["src/utils/loadL2D.js", "node_modules"]
}
