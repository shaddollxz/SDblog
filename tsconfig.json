{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "noImplicitAny": false,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true, // 如果依赖没有默认导出，将全部导出作为默认导出
        "experimentalDecorators": true, // 开启装饰器
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true, // for-in 中不会报错
        "preserveValueImports": true, // 在setup块中导入某些函数后直接在模板上使用的错误
        "noImplicitOverride": true, // 子类覆盖父类方法时加上override
        "skipLibCheck": true, // 打包时跳过类型检查
        "types": ["vitest/globals"]
    },
    "lib": ["esnext", "dom"],
    "exclude": ["dist", "bin", "node_modules", "**/*.config.js", "**/*.config.ts", "**/*.js"]
}
